<html lang="en">

<head>
  <title>Đăng Nhập</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet" />

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />

  <link rel="stylesheet" href="/css/style_login.css" />

</head>

<body style="background-image: url(/img/background/bg-login.jpg); background-size: cover;">
  <div class="login-form-container">
      <form method="POST" action="/login" class="form-input-Inf">
          <h1 class="title">Đăng Nhập</h1>
          {{#if message}}
            <div class="alert alert-success" role="alert">
              {{message}}
            </div>
          {{/if}}

          {{#wrongLogin}}
            <div class="alert alert-danger" role="alert">
              Email hoặc mật khẩu không đúng!
            </div>
          {{/wrongLogin}}

          {{#error}}
            <div class="alert alert-danger" role="alert">
              Bạn phải đăng nhập để mua hàng!
            </div>
          {{/error}}
          <div class="form-group">
              <i class="fa fa-user"></i>
              <input id="user-name" type="text" placeholder="Email" class="input-Inf" required/>
          </div>
          <div class="form-group">
              <i class="fa fa-lock"></i>
              <input id="user-password" type="password" placeholder="Mật khẩu" class="input-Inf"required/>
          </div>
          <div>
            <input type="submit" value="Đăng Nhập" id="form-submit">
          </div>
          <p class="link">Chưa có tài khoản? <a href="/register">Đăng ký ngay.</a></p>
          <p class="link"><a href="/forgot_password">Quên mật khẩu</a></p>
      </form>
  </div>

</body>

</html>